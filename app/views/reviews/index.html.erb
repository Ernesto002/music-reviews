<h1>Reviews by <%= @user.username %></h1> 

<% unless @reviews.empty? %> 
    <% @reviews.each do |review| %>
        <h4><%= link_to review.medium.element.title, medium_path(review.medium) %> - <%= review.rating %>/5</h4>
        <p><%= review.content %></p> 
        <% if @user == current_user %>
            <div class='current_user_actions_review_<%= review.id %>'>
                <%= link_to "Edit Review", edit_review_path(review) %>
                <%= form_tag review_path(review), method: 'delete' do %>
                    <%= submit_tag 'Delete Review' %>
                <% end %>
            </div>
        <% end %>
        <hr>
    <% end %>
<% else %>
  <p><%= @user.username %> has no reviews</p>
<% end %>